      <Button fx:id="RUbutton" layoutX="480.0" layoutY="254.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="53.0" text="RU"/>
      <Button fx:id="CZbutton" layoutX="480.0" layoutY="304.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="53.0" text="CZ"/>
      <Button fx:id="ESbutton" layoutX="533.0" layoutY="304.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="53.0" text="ES"/>
   </children>
</AnchorPane>
